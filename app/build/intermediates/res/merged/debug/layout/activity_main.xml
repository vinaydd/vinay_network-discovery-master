<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f9f9fa"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/common_toolbar" />
  <!--  <include layout="@layout/content_main" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_all_out_black_24dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".70"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:hint="Enter a name"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:hint="Enter additional notes"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:hint="Enter where device is located"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">




        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".12"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_timer_black_24dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".88"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:padding="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#353434"
                    android:text="Device is online"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#838383"
                    android:text="First seen on jul 11 11:38 AM"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/portScanButton"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_zoom_in_black_24dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#39a8ef"
                    android:text="Scan\nServices"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pingButton"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_trending_up_black_24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#39a8ef"
                    android:text="Ping \n"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_format_align_center_black_24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#39a8ef"
                    android:text="Trace\n Route"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/wolButton"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_power_settings_new_black_24dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#39a8ef"
                    android:text="Wake on \n LAN"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:padding="5dp"

                    android:layout_marginTop="2dp"
                    android:textColor="#838383"
                    android:text="IP Address"
                    android:layout_height="wrap_content" />



                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#838383"
                    android:text="MAC Address"
                    android:layout_height="wrap_content" />




                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#838383"
                    android:text="MAC Vendor"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ip_address"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:textColor="#838383"
                    android:layout_height="wrap_content" />



                <TextView
                    android:id="@+id/mac_address"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:textColor="#838383"
                    android:layout_height="wrap_content" />




                <TextView
                    android:id="@+id/vendor_name"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#838383"
                    android:layout_height="wrap_content" />


            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clipToPadding="false"
        android:fillViewport="true">

        <TextView
            android:id="@+id/resultText"
            android:padding="5dp"
            android:textColor="#2a48ef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </ScrollView>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
